<body>
  {{!-- Navigation --}}
  <nav class="navbar navbar-light bg-light border-bottom shadow" id="navbar">
    <a class="navbar-brand" href="/">
      <img src="/imgs/Snippetslogo.png" class="d-inline-block align-top" alt="Snippets.">
    </a>
    <a href="/logout">
      <button class="btn btn-outline-secondary px-4 my-sm-0 mr-3 roboto rounded-0" type="submit">Logout</button>
    </a>
  </nav>

  {{{body}}}

  <script>
    window.onscroll = function () { navScroll() };

    var navbar = document.getElementById("navbar");
    var sticky = navbar.offsetTop;

    function navScroll() {
      if (window.pageYOffset > 0.0) {
        navbar.classList.add("sticky")
      } else {
        navbar.classList.remove("sticky");
      }
    }
  </script>

</body>

