<div class="container-fluid shadow" id="main_container">
    <div class="row" id="one">
        <div class="col-md-6 col-md-offset-3" id="col">
            <h1 class="display-5" id="h1">Log In</h1>
            <form class="login">
                <div class="form-group">
                    <label for="Email address" id="label">Email address</label>
                    <input type="email" class="form-control" id="email-input" placeholder="Email">
                </div>
                <div class="form-group">
                    <label for="Password" id="label">Password</label>
                    <input type="password" class="form-control" id="password-input" placeholder="Password">
                </div>
                <button type="submit" class="btn btn-info btn-lg btn-block add-buttons">Log In</button>
            </form>

            <p id="p" class="text-center mt-3">Don't have an account? Create one:</p>
            <div class="mb-5"><a href="/">
                    <button type="button" class="btn btn-info btn-lg btn-block add-buttons">Create an Account</button></a>
            </div>

        </div>
    </div>
</div>

<script type="text/javascript" src="js/login.js"></script>